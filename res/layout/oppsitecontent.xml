<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/oppsitelayout"
    android:padding="10dp"
    >
    <ImageView android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/oppsitephoto"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/oppsitephoto"
        android:background="@drawable/talkcontent_bg"
        android:orientation="vertical" 
        android:layout_marginRight="20dp">

	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/textcolor_blackgray"
	        android:lineSpacingExtra="3dp"
	        android:id="@+id/oppsitetext"/>
    </LinearLayout>
</RelativeLayout>